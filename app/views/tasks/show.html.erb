<h1><%= @task.title %></h1>

<p><%= @task.details %></p>


<% if @task.completed %>
  <i class="fa fa-check-square-o"></i> This task is completed
<% else %>
  <i class="fa fa-square-o"></i> This task is not completed yet
<% end %>

<%= link_to "go back", tasks_path %>
<%= link_to 'edit', edit_task_path(@task) %>
<%= link_to 'delete', task_path(@task),
method: :delete, data: { confirm: 'Are you sure?' } %>
